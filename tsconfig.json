{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*", "./*"]
    },

    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",

    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*"],
  "exclude": ["node_modules"]
}
